<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?android:attr/buttonBarStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.go26.chatapp.ui.profile.EditProfileFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_18">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/profile_image_view"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_24"
                android:textColor="@color/profile"
                android:textSize="@dimen/sp_24" />

            <Button
                android:id="@+id/name_edit_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="名前を編集"
                android:textSize="@dimen/sp_16" />

            <View
                android:id="@+id/self_introduction_title_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_22"
                android:background="@color/inactive_gray" />

            <TextView
                android:id="@+id/self_introduction_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22"
                android:text="自己紹介"
                android:textColor="@color/profile"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/self_introduction_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/profile_content"
                android:textSize="@dimen/sp_16"
                android:visibility="gone" />

            <Button
                android:id="@+id/self_introduction_edit_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="自己紹介を編集"
                android:textSize="@dimen/sp_16" />

            <View
                android:id="@+id/age_title_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_22"
                android:background="@color/inactive_gray" />

            <TextView
                android:id="@+id/age_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22"
                android:text="年齢"
                android:textColor="@color/profile"
                android:textSize="@dimen/sp_18" />

            <Button
                android:id="@+id/age_edit_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="設定する"
                android:textSize="@dimen/sp_16" />

            <View
                android:id="@+id/language_title_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_22"
                android:background="@color/inactive_gray" />

            <TextView
                android:id="@+id/language_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22"
                android:text="プログラミング言語"
                android:textColor="@color/profile"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/language_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22"
                android:textColor="@color/profile_content"
                android:textSize="@dimen/sp_16"
                android:visibility="gone" />

            <Button
                android:id="@+id/language_edit_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="プログラミング言語を編集"
                android:textSize="@dimen/sp_16" />

            <View
                android:id="@+id/my_apps_title_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_22"
                android:background="@color/inactive_gray"/>


            <TextView
                android:id="@+id/my_apps_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22"
                android:text="過去に作ったアプリ"
                android:textColor="@color/profile"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/my_apps_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22"
                android:gravity="top|start"
                android:textColor="@color/profile_content"
                android:textSize="@dimen/sp_16"
                android:visibility="gone" />

            <Button
                android:id="@+id/my_apps_edit_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_24"
                android:text="過去に作ったアプリを編集"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
